# POLYGON ARBITRAGE BOT CONFIGURATION
# Copy this file to .env and fill in your values

# RPC ENDPOINTS
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_RPC_URL_BACKUP=https://rpc-mainnet.maticvigil.com

# PRIVATE KEYS (KEEP SECURE!)
PRIVATE_KEY=your_private_key_here

# CONTRACT ADDRESS (Deploy FlashLoanArbitrage.sol first)
CONTRACT_ADDRESS=

# TRADING PARAMETERS
MIN_PROFIT_BPS=50
MAX_GAS_PRICE_GWEI=150
SCAN_INTERVAL_MS=5000

# PERFORMANCE OPTIMIZATION (ARM-optimized Rust engines)
# Set to true for 75% memory reduction and 3x speed improvement
LIGHTWEIGHT_MODE=false

# ========================================
# HIGH-PRIORITY PROTOCOL EFFICIENCY FEATURES
# ========================================

# RISK MANAGEMENT (Priority 4)
# Maximum loss allowed per day in ETH (prevents runaway losses)
DAILY_LOSS_LIMIT_ETH=0.5

# Maximum consecutive failures before circuit breaker activates
MAX_CONSECUTIVE_FAILURES=5

# Maximum drawdown percentage before trading stops (10 = 10%)
MAX_DRAWDOWN_PERCENT=10

# Minimum balance in ETH to continue trading
MIN_BALANCE_ETH=1.0

# GAS OPTIMIZATION (Priority 3)
# Target gas price in gwei (optimal trading conditions)
TARGET_GAS_PRICE_GWEI=100

# Peak hour gas multiplier (avoid trading if gas > target * multiplier)
# Set to 1.5 means don't trade if gas > 150 gwei when target is 100
PEAK_HOUR_GAS_MULTIPLIER=1.5

# MEV PROTECTION (Priority 2)
# Use private transaction pools to prevent frontrunning (requires Flashbots RPC)
USE_PRIVATE_TRANSACTIONS=false

# Flashbots RPC URL for Polygon (leave empty if not using)
FLASHBOTS_RPC_URL=

# Bundle multiple transactions together for atomic execution
BUNDLE_TRANSACTIONS=false

# Minimum time between trades in milliseconds (prevents pattern detection)
MIN_TIME_BETWEEN_TRADES=30000

# ========================================

# LOGGING
LOG_LEVEL=info
