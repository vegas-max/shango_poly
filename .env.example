# POLYGON ARBITRAGE BOT CONFIGURATION
# Copy this file to .env and fill in your values

# NETWORK CONFIGURATION
# Set to 'mainnet' or 'testnet' (Mumbai)
NETWORK=mainnet

# RPC ENDPOINTS
# Mainnet RPC
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_RPC_URL_BACKUP=https://rpc-mainnet.maticvigil.com

# Testnet RPC (Polygon Mumbai)
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_MUMBAI_RPC_URL_BACKUP=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY

# WebSocket RPC for real-time data (optional but recommended for production)
POLYGON_WS_URL=
POLYGON_MUMBAI_WS_URL=

# PRIVATE KEYS (KEEP SECURE!)
PRIVATE_KEY=your_private_key_here

# CONTRACT ADDRESS (Deploy FlashLoanArbitrage.sol first)
CONTRACT_ADDRESS=
# Testnet contract address (if different from mainnet)
CONTRACT_ADDRESS_TESTNET=

# TRADING PARAMETERS
MIN_PROFIT_BPS=50
MAX_GAS_PRICE_GWEI=150
SCAN_INTERVAL_MS=5000

# REAL DATA CONFIGURATION
# Enable real-time data fetching from DEX pools
USE_REAL_DATA=true
# Enable WebSocket connections for real-time updates
USE_WEBSOCKET=false
# Update interval for pool reserves in milliseconds (when not using WebSocket)
POOL_UPDATE_INTERVAL_MS=10000

# PERFORMANCE OPTIMIZATION (ARM-optimized Rust engines)
# Set to true for 75% memory reduction and 3x speed improvement
LIGHTWEIGHT_MODE=false

# RUST ENGINE CONFIGURATION
# Enable Rust HTTP server for external integration
RUST_HTTP_SERVER=false
RUST_HTTP_PORT=8080

# ========================================
# HIGH-PRIORITY PROTOCOL EFFICIENCY FEATURES
# ========================================

# RISK MANAGEMENT (Priority 4)
# Maximum loss allowed per day in ETH (prevents runaway losses)
DAILY_LOSS_LIMIT_ETH=0.5

# Maximum consecutive failures before circuit breaker activates
MAX_CONSECUTIVE_FAILURES=5

# Maximum drawdown percentage before trading stops (10 = 10%)
MAX_DRAWDOWN_PERCENT=10

# Minimum balance in ETH to continue trading
MIN_BALANCE_ETH=1.0

# GAS OPTIMIZATION (Priority 3)
# Target gas price in gwei (optimal trading conditions)
TARGET_GAS_PRICE_GWEI=100

# Peak hour gas multiplier (avoid trading if gas > target * multiplier)
# Set to 1.5 means don't trade if gas > 150 gwei when target is 100
PEAK_HOUR_GAS_MULTIPLIER=1.5

# MEV PROTECTION (Priority 2)
# Use private transaction pools to prevent frontrunning (requires Flashbots RPC)
USE_PRIVATE_TRANSACTIONS=false

# Flashbots RPC URL for Polygon (leave empty if not using)
FLASHBOTS_RPC_URL=

# Bundle multiple transactions together for atomic execution
BUNDLE_TRANSACTIONS=false

# Minimum time between trades in milliseconds (prevents pattern detection)
MIN_TIME_BETWEEN_TRADES=30000

# ========================================

# EMERGENCY PROCEDURES
# Enable emergency stop functionality
ENABLE_EMERGENCY_STOP=true
# Emergency stop webhook URL (optional - for notifications)
EMERGENCY_WEBHOOK_URL=

# PRODUCTION SAFETY
# Conservative settings for initial deployment
# Set to true to enable conservative mode (lower risk, lower profit)
CONSERVATIVE_MODE=false
# Maximum position size in ETH (for conservative mode)
MAX_POSITION_SIZE_ETH=5

# ML MODELS CONFIGURATION
# Enable ML-based opportunity prediction (requires trained models)
ENABLE_ML_PREDICTIONS=false
# Path to trained ML model (if enabled)
ML_MODEL_PATH=./models/arbitrage_predictor.json

# ========================================

# LOGGING
LOG_LEVEL=info
